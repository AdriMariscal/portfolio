---
import BaseLayout from "../layouts/BaseLayout.astro";
import Hero from "../components/Hero.astro";
import ProjectCard from "../components/ProjectCard.astro";
import { getCollection } from "astro:content";

const allProjects = await getCollection('projects', ({ data }) => data.published !== false);
const featured = allProjects.filter((p) => p.data.featured === true);
const latest = featured.length ? featured : allProjects.slice(0, 2);
---
<BaseLayout title="Adrián Mariscal – Arquitecto Salesforce & dev web ligero">
  <Hero />

  <section class="section">
    <div class="container">
      <h2>Proyectos destacados</h2>
      <div class="grid grid--2" style="margin-top:16px">
        {latest.map((p) => (
          <ProjectCard entry={p} />
        ))}
      </div>
    </div>
  </section>
</BaseLayout>
