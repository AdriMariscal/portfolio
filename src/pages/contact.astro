---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Contacto · Adrián Mariscal" description="Cuéntame en qué te puedo ayudar.">
  <section class="section">
    <div class="container">
      <h1>Contacto</h1>
      <p class="muted">Cuéntame en qué te puedo ayudar.</p>

      <form
        name="contact"
        method="POST"
        data-netlify="true"
        netlify-honeypot="bot-field"
        action="/thanks"
        class="card stack"
      >
        <input type="hidden" name="form-name" value="contact" />
        <p style="display:none">
          <label>Si ves este campo, déjalo vacío:
            <input name="bot-field" />
          </label>
        </p>

        <label>
          Nombre
          <input name="name" required class="input" />
        </label>

        <label>
          Email
          <input type="email" name="email" required class="input" />
        </label>

        <label>
          Mensaje
          <textarea name="message" rows="6" required class="input"></textarea>
        </label>

        <button type="submit" class="btn btn--primary">Enviar</button>
      </form>
    </div>
  </section>
</BaseLayout>

<style>
.input{width:100%;padding:.6rem;border:1px solid #E2E8F0;border-radius:8px}
.muted{color:var(--am-graphite,#162433)}
</style>
