---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Contacto · Adrián Mariscal" description="Cuéntame en qué te puedo ayudar.">
  <main class="section">
    <div class="wrap">
      <!-- Encabezado con respiración -->
      <header class="contact__intro stack" style="--stack-gap: 6px;">
        <h1 class="h2">Contacto</h1>
      <p class="muted">Cuéntame en qué te puedo ayudar.</p>
      </header>

      <!-- Formulario -->
      <form
        class="card contact__form"
        name="contact"
        method="POST"
        action="/thanks"
        data-netlify="true"
        netlify-honeypot="bot-field"
      >
        <!-- Netlify -->
        <input type="hidden" name="form-name" value="contact" />
        <p hidden>
          <label>Don’t fill this out: <input name="bot-field" /></label>
        </p>

        <div class="card__body stack" style="--stack-gap: 18px;">
          <label class="field">
            <span>Nombre</span>
            <input class="input" type="text" name="name" autocomplete="name" required />
        </label>

          <label class="field">
            <span>Email</span>
            <input class="input" type="email" name="email" autocomplete="email" required />
        </label>

          <label class="field">
            <span>Mensaje</span>
            <textarea class="input" name="message" rows="6" required></textarea>
        </label>

          <button class="btn btn--primary btn--block" type="submit">Enviar</button>
        </div>
      </form>
    </div>
  </main>
</BaseLayout>
