---
import type { CollectionEntry } from "astro:content";
interface Props { entry: CollectionEntry<'blog'> }
const { entry } = Astro.props;
const { data, slug } = entry;
const date = data.date ? new Date(data.date).toLocaleDateString("es-ES") : "";
---
<article class="rounded-2xl border p-5 hover:shadow transition">
  <a href={`/blog/${slug}`} class="block">
    <h3 class="text-xl font-semibold">{data.title}</h3>
    <p class="text-sm text-gray-600 mt-1">{data.description}</p>
    <p class="mt-2 text-xs text-gray-500">{date}</p>
  </a>
  {data.tags.length > 0 && (
    <ul class="mt-3 flex flex-wrap gap-2">
      {data.tags.map(t => <li class="text-xs bg-gray-100 px-2 py-0.5 rounded">{t}</li>)}
    </ul>
  )}
</article>
